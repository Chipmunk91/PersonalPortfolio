{
  "components": [
    {
      "type": "slider",
      "name": "learningRate",
      "label": "Learning Rate",
      "min": 0.001,
      "max": 0.1,
      "step": 0.001,
      "defaultValue": 0.01
    },
    {
      "type": "slider",
      "name": "neurons",
      "label": "Hidden Neurons",
      "min": 1,
      "max": 20,
      "step": 1,
      "defaultValue": 8
    },
    {
      "type": "select",
      "name": "activationFunction",
      "label": "Activation Function",
      "options": [
        {"label": "ReLU", "value": "relu"},
        {"label": "Sigmoid", "value": "sigmoid"},
        {"label": "Tanh", "value": "tanh"}
      ],
      "defaultValue": "relu"
    },
    {
      "type": "slider",
      "name": "epochs",
      "label": "Training Epochs",
      "min": 10,
      "max": 1000,
      "step": 10,
      "defaultValue": 100
    }
  ],
  "description": "Experiment with different neural network parameters to see how they affect decision boundaries and model accuracy. Adjust the learning rate, number of neurons, activation functions, and training epochs to optimize performance."
}